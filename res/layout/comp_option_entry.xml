<?xml version="1.0" encoding="utf-8"?>

<com.ssttevee.pokemonandroid.view.PokeOptionLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:paddingBottom="@dimen/optionEntrySpacingHeight">

	<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:layout_alignParentRight="true"
			android:id="@+id/options"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignBottom="@id/options"
			android:gravity="center_vertical"
			android:id="@+id/optionTitle"/>

</com.ssttevee.pokemonandroid.view.PokeOptionLayout>